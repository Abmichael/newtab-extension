{
  "manifest_version": 3,
  "name": "NeoTab",
  "version": "1.0.0",
  "description": "A custom new tab page with Android-style folder organization for bookmarks",
  "author": "NeoTab Team",

  "chrome_url_overrides": {
    "newtab": "index.html"
  },

  "permissions": ["storage"],

  "content_security_policy": {
    "extension_pages": "default-src 'self'"
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "NeoTab"
  }
}
